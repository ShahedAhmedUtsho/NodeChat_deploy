<div class="modal-wrapper hidden fixed inset-0 bg-black bg-opacity-70 flex items-center justify-center z-50"
    id="add-user-modal">
    <div class="modal bg-[#121212] rounded-lg shadow-lg p-8 w-full max-w-lg relative">
        <a href="#" onclick="closeModal()"
            class="modal-close text-gray-400 hover:text-white text-3xl absolute top-4 right-6 transition duration-200">x</a>
        <div class="modal-title mb-6 text-center">
            <h2 class="text-3xl font-semibold text-gray-100">Create New User</h2>
        </div>
        <div class="modal-body">
            <form action="/users" method="post" enctype="multipart/form-data" id="add-user-form" class="space-y-6">
                <div>
                    <input type="text" placeholder="Enter name" name="name"
                        class="w-full p-3 rounded-lg bg-gray-800 text-gray-200 placeholder-gray-400 focus:ring-2 focus:ring-[#4B20B2] focus:outline-none transition duration-200" />
                    <p id="name-error" class="error name-error hidden text-sm text-red-500 mt-1">Please enter a valid
                        name.</p>
                </div>

                <div>
                    <input type="text" placeholder="Enter email" name="email"
                        class="w-full p-3 rounded-lg bg-gray-800 text-gray-200 placeholder-gray-400 focus:ring-2 focus:ring-[#4B20B2] focus:outline-none transition duration-200" />
                    <p id="email-error" class="error email-error hidden text-sm text-red-500 mt-1">Please enter a valid
                        email
                        address.</p>
                </div>

                <div>
                    <input type="number" placeholder="Enter mobile" name="mobile"
                        class="w-full p-3 rounded-lg bg-gray-800 text-gray-200 placeholder-gray-400 focus:ring-2 focus:ring-[#4B20B2] focus:outline-none transition duration-200" />
                    <p id="mobile-error" class="error mobile-error hidden text-sm text-red-500 mt-1">Please enter a
                        valid mobile
                        number.</p>
                </div>

                <div>
                    <input type="password" placeholder="Enter password" name="password"
                        class="w-full p-3 rounded-lg bg-gray-800 text-gray-200 placeholder-gray-400 focus:ring-2 focus:ring-[#4B20B2] focus:outline-none transition duration-200" />
                    <p id="password-error" class="error password-error hidden text-sm text-red-500 mt-1">Password must
                        be at least 6
                        characters.</p>
                </div>

                <div>
                    <input type="file" name="avatar"
                        class="w-full p-3 rounded-lg bg-gray-800 text-gray-200 border border-gray-700 focus:ring-2 focus:ring-[#4B20B2] focus:outline-none transition duration-200" />
                    <p id="avatar-error" class="error avatar-error hidden text-sm text-red-500 mt-1">Please upload a
                        valid avatar
                        image.</p>
                </div>

                <input type="submit" value="Submit"
                    class="w-full p-3 bg-[#4B20B2] text-white rounded-lg hover:bg-[#3d1a94] transition duration-200 cursor-pointer" />

                <p id="common-error" class="error common-error hidden text-sm text-red-500 mt-4">Please
                    correct the
                    errors above
                    before submitting.</p>
            </form>
        </div>
    </div>
</div>